{
  "express": {
    "view engine": null
  },
  "view engines": null,
  "databaseConfig": {
    "host": "bolt://172.31.16.100:7687"
  },
  "cdnStore": {
    "bucket": "elyoos"
  },
  "emailConfig": {
    "host": "172.31.0.100",
    "port": 6379,
    "prefix": "q",
    "delay": 1800
  },
  "bcrypt": {
    "difficulty": 8
  },
  "middleware": {
    "compress": {
      "enabled": true
    },
    "static": {
      "route": "/app",
      "priority": 20,
      "module": {
        "name": "serve-static",
        "arguments": [
          "path:./../client/app"
        ]
      }
    },
    "json": {
      "priority": 30,
      "module": {
        "name": "body-parser",
        "method": "json",
        "arguments": [
          {
            "type": "application/json"
          }
        ]
      }
    },
    "urlEncoded": {
      "priority": 40,
      "module": {
        "name": "body-parser",
        "method": "urlencoded",
        "arguments": [
          {
            "extended": true
          }
        ]
      }
    },
    "multipart": {
      "enabled": true,
      "priority": 50,
      "module": {
        "name": "kraken-js/middleware/multipart"
      }
    },
    "cookieParser": {
      "priority": 60,
      "module": {
        "name": "cookie-parser"
      }
    },
    "session": {
      "priority": 70,
      "module": {
        "name": "elyoos-server-lib/lib/redisSession",
        "arguments": [
          {
            "key": "sessionElyoos",
            "secret": "23564153589Debd8",
            "cookie": {
              "path": "/",
              "httpOnly": true,
              "maxAge": 15552000000 //6 Month
            },
            "rolling": true,
            "resave": true,
            "saveUninitialized": true
          },
          {
            "host": "172.31.0.100",
            "port": 6379
          }
        ]
      }
    },
    "appsec": {
      "enabled": true,
      "priority": 90,
      "module": {
        "name": "lusca",
        "arguments": [
          {
            "csrf": false,
            "csp": {
              "policy": [
                "font-src 'self' https://fonts.gstatic.com/",
                "style-src 'self' https://fonts.googleapis.com/ 'unsafe-inline'",
                "script-src 'self' https://ajax.googleapis.com/ 'unsafe-inline'"
              ]
            },
            "xframe": "SAMEORIGIN",
            "xssProtection": true,
            "nosniff": true
          }
        ]
      }
    },
    "router": {
      "priority": 100,
      "module": {
        "name": "express-enrouten",
        "arguments": [
          {
            "directory": "path:./controllers"
          }
        ]
      }
    },
    "errorHandling": {
      "enabled": true,
      "priority": 1000,
      "module": {
        "name": "elyoos-server-lib/lib/error/errors",
        "method": "handlingError"
      }
    }
  }
}
