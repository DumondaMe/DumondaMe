<tr>
    <th style="padding-top:10px;padding-bottom:20px">
        <% if (isAnonymous) { %>
            <span style="font-weight:bold;font-size:16px;text-decoration:none;color:black">
                <%= anonymousPerson %>
            </span>
        <% } else { %>
            <a style="font-weight:bold;font-size:16px;text-decoration:none;color:black"
               href="<%= linkToCreator %>"><%= answerCreator.name %></a>
        <% } %>
        <% if (answer.title) { %>
            <span style="font-weight:normal;font-size:16px;color:black"><%= text1 %></span>
            <a style="font-weight:bold;font-size:16px;text-decoration:none;color:#009e97"
               href="<%= linkToAnswer %>"><%= answer.title %></a>
            <span style="font-weight:normal;font-size:16px;color:black"><%= text2 %></span>
        <% } else { %>
            <span style="font-weight:normal;font-size:16px;color:black"><%= textDefaultAnswer1 %></span>
            <a style="font-weight:bold;font-size:16px;text-decoration:none;color:#009e97"
               href="<%= linkToAnswer %>"><%= question.question %></a>
            <span style="font-weight:normal;font-size:16px;color:black"><%= textDefaultAnswer2 %></span>
        <% } %>
        <div style="font-weight:normal;font-style:italic;font-size:16px;color:black;padding-top:8px"><%= descriptionAnswer %></div>
    </th>

</tr>